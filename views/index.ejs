<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" type="text/css" href="/assets/css/scrollbar.css"/>
    <link rel="stylesheet" type="text/css" href="/assets/css/transicion.css"/>
    <link rel="stylesheet" type="text/css" href="/assets/css/clases.css"/>
    <link rel="stylesheet" type="text/css" href="/assets/css/style.css"/>
    <link rel="stylesheet" type="text/css" href="/assets/css/card.css"/>
    <link rel="icon" href="/assets/img/icon600x600.png"/>
    <% if(data.nom == '/'){ %> 
        <title>Home</title>
    <% } else { %>
        <title><%= data.nom %></title>
    <% } %>
</head>
<body>

    <div id="container-water">
        <div class="water"></div>
        <div class="row">
            <h1 class="m-5 text-light">GESTOR DOCUMENTAL</h1>
        </div>
    </div>

    <!-- NAVBAR SUPERIOR -->
    <nav id="navbar" class="navbar navbar-light bg-light shadow-sm">
        <div class="row container-fluid">
            <div class="col-auto justify-content-left">
                <a class="navbar-brand" href="/home"><h5 class="m-2">Gestor Documental</h5></a>
            </div>
            <div class="col-auto justify-content-right text-center">
                <a class="btn" id="volver"><img src="/assets/img/volver.png" class="img-fluid" width="25"></a>
                <a class="btn" href="/home"><img src="/assets/img/home.png" class="img-fluid" width="35"></a>
            </div>
        </div>
    </nav>

    <!-- CONTENEDOR DE TU POSICION -->
    <div class="container-fluid">
        <div class="col text-center rounded text-light">
            <p class="peq">Te encuentras en: <%= ' ' + data.nom %></p>
        </div>
    </div>

        <% if (data.hijos.length != 0){ %>
        <!-- CONTENEDOR DE DIRECTORIOS -->
            <div class="dir">
                <div class="d-flex text-light mb-2">Directorios <%= data.hijos.length  %></div>
                <% data.hijos.forEach(function(hijo, i){ %> 
                <% if ((i % 3) == 0){ %>
                <div class="row">
                <% }  %>
                    <div class="col card m-1 shadow-sm">
                        <div class="d-flex">
                            <div class="justify-content-left align-self-center me-auto px-1">
                                <img src="/assets/img/icon600x600.png" class="img-fluid m-2 imagen-negra" width="30" alt="folder">
                            </div>
                            <div class="col">
                                <a class="btn card-body" href="<%= '/'+ hijo.rutaRelativa %>">
                                    <%= hijo.nombre %>
                                </a>
                            </div>
                        </div> 
                    </div>
                <% if ((i % 3) == 2){ %>
                </div>
            <% } %>
        <% }) %>
        </div>
    </div>
    <hr>
    <% } %>

    <!-- CONTENEDOR DE ARCHIVOS -->
    <% if (data.archivos.length > 0){ %>
    <div class="file">
        <div class="d-flex text-light mb-2">Archivos <%= data.archivos.length %></div>
        <% data.archivos.forEach(function(ar, i){ %>
        <% if ((i % 3) == 0){ %>
            <div class="row">
            <% } %>
            <div class="col card m-1 shadow-sm">
                <div class="d-flex">
                    <div class="justify-content-left align-self-center me-auto px-1">
                        <img src="" class="img-fluid m-2 imagen-negra" width="30" alt="folder">
                    </div>
                    <div>
                        <form action="/descargar" method="post">
                            <input type="text" name="descargar" class="hide" value="<%=ar%>">
                            <button type="submit" class="btn text-break card-body archivo"><%=ar%></button>
                        </form>
                    </div>
                    <div class="justify-content-right align-self-center ms-auto px-1">
                        <form action="/eliminar?_method=DELETE" class="cerrar" name="formEliminar" method="POST">
                            <input type="text" name="archivo" class="hide" value="<%=ar%>">
                            <button type="submit" class="btn-close mx-2"></button>
                        </form>
                    </div>
                </div>
            </div>
            <% if ((i % 3) == 2){ %>
            </div>
            <% } %>
        <% }) %>
        </div>
        </div>
    </div>
    <hr>
    <% } %>

    <% if (data.archivos.length == 0 && data.hijos.length == 0){ %>
    <!-- CONTENIDO EN CASO DE NO HABER NI DIRECTORIOS NI ARCHIVOS -->
        <div class="container-fluid mt-5">
            <div class="row">
                <div class="col text-center"><img src="/assets/img/vacio.png" class="img-fluid invertido" width="150"></div>
            </div>
            <div class="row mt-2">
                <div class="col text-center justify-content-center invertido">
                    <h3>UPS, aqui no hay ni directorios ni archivos.</h3>
                </div>
            </div>
            <div class="row text-center">
                <a id="regresar"><img src="/assets/img/volver.png" class="img-fluid invertido" width="45"></a>
            </div>
        </div>
    <% } %>

    <!-- APARTADO PARA SUBIR ARCHIVOS -->
            <div class="subir-archivo">
            <div class="d-flex text-light">Subir archivo</div>
                <div class="row">
                    <div class="col">
                        <form action="/subir" method="post" enctype="multipart/form-data">
                            <input type="file" class="form-control card" id="formFileMultiple" name="archivoSubir" required>
                            <div class="col d-grid mt-2 justify-content-center">
                                <input type="submit" class="btn card" value="Subir archivo">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <hr>
        </div> 

<!-- SCRIPTS -->
    <script src='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.min.js'></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/script/seleccionado.js"></script>
</body>
</html>